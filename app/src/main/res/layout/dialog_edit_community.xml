            tools:text="Community number" />

        <TextView
            android:id="@+id/editCommunityNumberAfter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorEditAfter"
            app:layout_constraintLeft_toLeftOf="@+id/editCommunityNumberBefore"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCommunityNumberBefore"
            tools:text="Community number" />

        <TextView
            android:id="@+id/editCommunityFlatsBefore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
