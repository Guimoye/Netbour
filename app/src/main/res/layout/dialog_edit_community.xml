            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editCommunityStaticProvince"
            tools:text="Community province" />

        <TextView
            android:id="@+id/editCommunityProvinceAfter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorEditAfter"
            app:layout_constraintLeft_toLeftOf="@+id/editCommunityProvinceBefore"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCommunityProvinceBefore"
            tools:text="Community province" />

        <TextView
            android:id="@+id/editCommunityMunicipalityBefore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorEditBefore"
            app:layout_constraintLeft_toRightOf="@+id/editCommunityStaticMunicipality"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editCommunityStaticMunicipality"
            tools:text="Community municipality" />

        <TextView
            android:id="@+id/editCommunityMunicipalityAfter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
