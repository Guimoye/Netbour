<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:gravity="center">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fragFormDocumentTitleFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/form_background"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/fragFormDocumentTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/format_title"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/format_title"
                android:hint="@string/fragFormDocumentTitle"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fragFormDocumentLinkFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/form_background"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormDocumentTitleFloat">

            <EditText
                android:id="@+id/fragFormDocumentLink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/link_variant"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/link_variant"
                android:hint="@string/fragFormDocumentLink"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fragFormDocumentDescriptionFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/form_background"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormDocumentLinkFloat">

            <EditText
                android:id="@+id/fragFormDocumentDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawablePadding="10dp"
                android:gravity="top|start"
                android:hint="@string/fragFormDocumentDescription"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="6"
                android:minLines="6"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <info.hoang8f.widget.FButton
            android:id="@+id/fragFormDocumentSave"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/check_white"
            android:drawableStart="@drawable/check_white"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="@string/fragFormSave"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormDocumentDescriptionFloat"
            fbutton:buttonColor="@color/orange_600"
            fbutton:cornerRadius="12dp"
            fbutton:shadowColor="@color/orange_900"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="8dp" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>