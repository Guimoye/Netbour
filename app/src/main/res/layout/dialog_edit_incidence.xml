<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/editIncidenceConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/confirm_data"
        android:textColor="@color/grey_700"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editIncidenceStaticTitleBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/confirm_title"
        android:textColor="@color/red_300"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editIncidenceConfirm" />

    <TextView
        android:id="@+id/editIncidenceStaticTitleAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/confirm_title"
        android:textColor="@color/green_600"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editIncidenceTitleBefore" />

    <TextView
        android:id="@+id/editIncidenceStaticDescriptionBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/confirm_description"
        android:textColor="@color/red_300"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editIncidenceTitleAfter" />

    <TextView
        android:id="@+id/editIncidenceStaticDescriptionAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/confirm_description"
        android:textColor="@color/green_600"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editIncidenceDescriptionBefore" />

    <TextView
        android:id="@+id/editIncidenceTitleBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/red_300"
        app:layout_constraintLeft_toRightOf="@+id/editIncidenceStaticTitleBefore"
        app:layout_constraintTop_toTopOf="@+id/editIncidenceStaticTitleBefore"
        tools:text="Incidence title" />

    <TextView
        android:id="@+id/editIncidenceTitleAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/green_600"
        app:layout_constraintLeft_toRightOf="@+id/editIncidenceStaticTitleAfter"
        app:layout_constraintTop_toTopOf="@+id/editIncidenceStaticTitleAfter"
        tools:text="Incidence title" />

    <TextView
        android:id="@+id/editIncidenceDescriptionBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/red_300"
        app:layout_constraintLeft_toRightOf="@+id/editIncidenceStaticDescriptionBefore"
        app:layout_constraintTop_toTopOf="@+id/editIncidenceStaticDescriptionBefore"
        tools:text="Incidence description" />

    <TextView
        android:id="@+id/editIncidenceDescriptionAfter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/green_600"
        app:layout_constraintLeft_toRightOf="@+id/editIncidenceStaticDescriptionAfter"
        app:layout_constraintTop_toTopOf="@+id/editIncidenceStaticDescriptionAfter"
        tools:text="Incidence description" />
</android.support.constraint.ConstraintLayout>