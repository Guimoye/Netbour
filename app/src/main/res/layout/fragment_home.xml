<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_300">

    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="0dp"
        android:layout_height="132dp"
        android:layout_margin="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo300"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <info.hoang8f.widget.FButton
        android:id="@+id/homeIncidences"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:drawableTop="@drawable/tooltip_image_white"
        android:text="@string/groupOptions_Incidences"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:buttonColor="@color/blue_600"
        app:cornerRadius="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/homeImage"
        app:shadowColor="@color/blue_800"
        app:shadowEnabled="true"
        app:shadowHeight="6dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/homeDocuments"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:drawableTop="@drawable/file_document_white"
        android:text="@string/groupOptions_Documents"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:buttonColor="@color/blue_600"
        app:cornerRadius="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeImage"
        app:shadowColor="@color/blue_800"
        app:shadowEnabled="true"
        app:shadowHeight="6dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/homeBoard"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:drawableTop="@drawable/clipboard_alert_white"
        android:text="@string/groupOptions_Board"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:buttonColor="@color/blue_600"
        app:cornerRadius="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/homeIncidences"
        app:shadowColor="@color/blue_800"
        app:shadowEnabled="true"
        app:shadowHeight="6dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/homeComBoard"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:drawableTop="@drawable/clipboard_white"
        android:text="@string/groupOptions_ComBoard"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:buttonColor="@color/blue_600"
        app:cornerRadius="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeDocuments"
        app:shadowColor="@color/blue_800"
        app:shadowEnabled="true"
        app:shadowHeight="6dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/homeMeetings"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:drawableTop="@drawable/timetable_white"
        android:text="@string/groupOptions_Meetings"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:buttonColor="@color/blue_600"
        app:cornerRadius="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/homeBoard"
        app:shadowColor="@color/blue_800"
        app:shadowEnabled="true"
        app:shadowHeight="6dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/homeUsers"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:drawableTop="@drawable/account_multiple_white"
        android:text="@string/groupOptions_Users"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:buttonColor="@color/blue_600"
        app:cornerRadius="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeComBoard"
        app:shadowColor="@color/blue_800"
        app:shadowEnabled="true"
        app:shadowHeight="6dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/homeCommunities"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:drawableTop="@drawable/home_modern_white"
        android:text="@string/groupOptions_Communities"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:buttonColor="@color/blue_600"
        app:cornerRadius="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/homeMeetings"
        app:layout_constraintRight_toRightOf="@+id/homeUsers"
        app:layout_constraintTop_toBottomOf="@+id/homeMeetings"
        app:shadowColor="@color/blue_800"
        app:shadowEnabled="true"
        app:shadowHeight="6dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</android.support.constraint.ConstraintLayout>