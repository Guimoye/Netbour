<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_image" />

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/frgProfileEmailFloat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/form_background"
        android:padding="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <EditText
            android:id="@+id/frgProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_holo_light"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/email"
            android:enabled="false"
            android:hint="@string/fragFormUserEmail"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_600" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/frgProfileNameFloat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/form_background"
        android:padding="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnSave"
        app:layout_constraintTop_toBottomOf="@+id/frgProfileEmailFloat">

        <EditText
            android:id="@+id/frgProfileName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_holo_light"
            android:drawableLeft="@drawable/face"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/face"
            android:hint="@string/fragFormUserName"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_600" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:id="@+id/frgProfilePhoneFloat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/form_background"
        android:padding="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnSave"
        app:layout_constraintTop_toBottomOf="@+id/frgProfileNameFloat">

        <EditText
            android:id="@+id/frgProfilePhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_holo_light"
            android:drawableLeft="@drawable/cellphone_android"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/cellphone_android"
            android:hint="@string/fragFormUserPhone"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_600" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnSave"
        app:layout_constraintTop_toBottomOf="@+id/frgProfilePhoneFloat">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/frgProfileFloorFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="50"
            android:background="@drawable/form_background"
            android:padding="2dp">

            <EditText
                android:id="@+id/frgProfileFloor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/home_map_marker"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/home_map_marker"
                android:hint="@string/fragFormUserFloor"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/frgProfileDoorFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="50"
            android:background="@drawable/form_background"
            android:padding="2dp">

            <EditText
                android:id="@+id/frgProfileDoor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/home_map_marker"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/home_map_marker"
                android:hint="@string/fragFormUserDoor"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnSave"
        style="?attr/actionButtonStyle"
        android:layout_width="46dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/form_background"
        android:contentDescription="@string/app_name"
        android:src="@drawable/reload"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/frgProfileNameFloat" />
</android.support.constraint.ConstraintLayout>