<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:gravity="center">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fragFormRegisterCodeFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/form_background"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/fragFormRegisterCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/home_modern"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/home_modern"
                android:hint="@string/fragFormUserCode"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fragFormRegisterEmailFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_background"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormRegisterCodeFloat">

            <EditText
                android:id="@+id/fragFormRegisterEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/email"
                android:hint="@string/fragFormUserEmail"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fragFormRegisterNameFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_background"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormRegisterEmailFloat">

            <EditText
                android:id="@+id/fragFormRegisterName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/face"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/face"
                android:hint="@string/fragFormUserName"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fragFormRegisterPhoneFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_background"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormRegisterNameFloat">

            <EditText
                android:id="@+id/fragFormRegisterPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/cellphone_android"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/cellphone_android"
                android:hint="@string/fragFormUserPhone"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <LinearLayout
            android:id="@+id/fragFormRegisterLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormRegisterPhoneFloat">

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/fragFormRegisterFloorFloat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="5"
                android:background="@drawable/form_background"
                android:padding="2dp">

                <EditText
                    android:id="@+id/fragFormRegisterFloor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_holo_light"
                    android:drawableLeft="@drawable/home_map_marker"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/home_map_marker"
                    android:hint="@string/fragFormUserFloor"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_600" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:id="@+id/fragFormRegisterDoorFloat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_weight="5"
                android:background="@drawable/form_background"
                android:padding="2dp">

                <EditText
                    android:id="@+id/fragFormRegisterDoor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_holo_light"
                    android:drawableLeft="@drawable/home_map_marker"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/home_map_marker"
                    android:hint="@string/fragFormUserDoor"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_600" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:id="@+id/fragFormRegisterPinFloat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_background"
            android:padding="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormRegisterLinear">

            <EditText
                android:id="@+id/fragFormRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:drawableLeft="@drawable/numeric"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/numeric"
                android:hint="@string/fragFormUserPin"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_600" />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <info.hoang8f.widget.FButton
            android:id="@+id/fragFormRegisterSave"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/check_white"
            android:drawableStart="@drawable/check_white"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="@string/fragFormRegister"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragFormRegisterPinFloat"
            fbutton:buttonColor="@color/orange_600"
            fbutton:cornerRadius="12dp"
            fbutton:shadowColor="@color/orange_900"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="8dp" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>